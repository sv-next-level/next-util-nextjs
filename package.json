{
  "name": "next-util-nextjs",
  "version": "v1.0.0",
  "description": "Nextjs template to start",
  "author": "Sagar Variya",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/sv-next-level/next-util-nextjs.git"
  },
  "scripts": {
    "cm": "cz",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lints": "lint-staged",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "release:local": "npx semantic-release --no-ci --dry-run=false",
    "prettier": "prettier .",
    "format": "npm run prettier -- --write",
    "check-formats": "npm run prettier -- --list-different",
    "validate": "npm run check-formats && npm run lint && npm run build",
    "sh:files_to_copy": "chmod +x ./script/files_to_copy.sh && ./script/files_to_copy.sh",
    "sh:files_to_delete": "chmod +x ./script/files_to_delete.sh && ./script/files_to_delete.sh",
    "submodule": "git submodule update --init --remote",
    "clean": "npm run sh:files_to_delete && npm cache clean --force",
    "preinstall": "npm run submodule && npm run sh:files_to_copy",
    "prepare": "husky install"
  },
  "workspaces": [],
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "semantic-release": "^24.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
